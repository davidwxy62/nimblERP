<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>nimblERP</title>

        <!-- CSS Files -->
        <link rel="stylesheet" href="./styles.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" crossorigin="anonymous">
  </head>
    </head>
    <body style="background-color: #EDE7E1;">
        <div class="row justify-content-end mx-5 my-5 h-25">
            <div id="logged_in_user" class="col-6 text-end my-auto ms-0 me-0 ps-0 pe-0">
                <%- name %>
            </div>
        </div>
        <div class="row justify-content-center">
            <img id="logo" src="./logo.png" alt="nimblERP" class="col-6 ms-0 me-0 ps-0 pe-0 img-fluid">
        </div>
        <div class="container w-75 mx-auto">
            <div class="row mt-4">
                <div class="col-auto d-flex align-items-center me-3">
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle border-0 bg-light shadow-sm" type="button" data-bs-toggle="dropdown" style="padding: 11px;">
                            New
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><button class="dropdown-item" type="button">Order</button></li>
                            <li><button class="dropdown-item" type="button">Part</button></li>
                            <li><button class="dropdown-item" type="button">Drawing</button></li>
                        </ul>
                    </div>
                </div>
                <div class="col">
                    <div class="p-1 bg-light rounded shadow-sm">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-secondary dropdown-toggle border-0 bg-light" type="button" data-bs-toggle="dropdown" id="dropdownButton">
                                Search By
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <button class="dropdown-item dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                            Orders
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-start">
                                            <li>
                                                <label class="dropdown-item">
                                                    <input type="radio" name="options" value="orderNumber" onclick="updateDropdownValue(this)"> Order Number
                                                </label>
                                            </li>
                                            <li>
                                                <label class="dropdown-item">
                                                    <input type="radio" name="options" value="poNumber" onclick="updateDropdownValue(this)"> P.O. Number
                                                </label>
                                            </li>
                                        </ul>
                                    </li>
                                    <li>
                                        <button class="dropdown-item dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                            Parts
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-start">
                                            <li>
                                                <label class="dropdown-item">
                                                    <input type="radio" name="options" value="drawingNumber" onclick="updateDropdownValue(this)"> Drawing Number
                                                </label>
                                            </li>
                                            <li>
                                                <label class="dropdown-item">
                                                    <input type="radio" name="options" value="serialNumber" onclick="updateDropdownValue(this)"> Serial Number
                                                </label>
                                            </li>
                                        </ul>
                                    </li>
                                    <li>
                                        <button class="dropdown-item dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                            Customers
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-start">
                                            <li>
                                                <label class="dropdown-item">
                                                    <input type="radio" name="options" value="customerName" onclick="updateDropdownValue(this)"> Customer Name
                                                </label>
                                            </li>
                                            <li>
                                                <label class="dropdown-item">
                                                    <input type="radio" name="options" value="customerCode" onclick="updateDropdownValue(this)"> Customer Code
                                                </label>
                                            </li>
                                        </ul>
                                    </li>
                                    <li>
                                        <button class="dropdown-item dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                            Vend
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-start">
                                            <li>
                                                <label class="dropdown-item">
                                                    <input type="radio" name="options" value="vendOrderNumber" onclick="updateDropdownValue(this)"> Vend Order Number
                                                </label>
                                            </li>
                                            <li>
                                                <label class="dropdown-item">
                                                    <input type="radio" name="options" value="vendPoNumber" onclick="updateDropdownValue(this)"> Vend P.O. Number
                                                </label>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                            <input type="search" placeholder="Search" class="form-control border-0 bg-light" id="searchBar">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-link text-black"><i class="fa-solid fa-magnifying-glass"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
          
          
          <script>
            // Enable nested dropdowns
            const dropdownMenus = Array.from(document.querySelectorAll('.dropdown-menu'));
            dropdownMenus.forEach((dropdownMenu) => {
              dropdownMenu.addEventListener('click', (event) => {
                event.stopPropagation();
              });
            });
          
            function updateDropdownValue(selectedOption) {
                const dropdownButton = document.getElementById('dropdownButton');
                dropdownButton.textContent = selectedOption.parentNode.textContent.trim();
                dropdownButton.click();
                searchBar.focus();
            }
        </script>
<%- include('footer') %>